<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@xml/background_griditem"
    android:padding="1dp">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_network_device"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@xml/background_griditem"
            android:orientation="vertical"
            android:padding="14dp">

            <ImageButton
                android:id="@+id/activity_network_device_status_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_grey" />

            <TextView
                android:id="@+id/activity_network_device_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_network_device_status_icon"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="12sp"></TextView>

            <TextView
                android:id="@+id/activity_network_device_status_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_network_device_status_label"
                android:layout_centerHorizontal="true"
                android:maxLines="1"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>